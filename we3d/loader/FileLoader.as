package we3d.loader {	import we3d.loader.LWOLoader;	import we3d.loader.OBJLoader;	import we3d.loader._3DSLoader;	import we3d.loader.MD2Loader;	import we3d.loader.WE3DLoader;		/**	* Chooses the correct loader by the file extension. In the on load handler you actually have to cast to a SceneLoader instead of a FileLoader.	 * <code>	 * var ldr:FileLoader = new FileLoader( "file.obj" );	 * ldr.loader.loadFile( "file.obj" );	 * function onLoaded (e:Event) :void {	 *   var ldr:SceneLoader = SceneLoader( e.target );	 *   trace( ldr.numObjects + " objects, " + ldr.numLights + ", lights" );	 * }	 * </code>	*/	public class FileLoader	{		public var loader:SceneLoader;		public var type:String="";				public function FileLoader (filename:String="") {			if(filename != "") {				var e:int = filename.lastIndexOf(".");								if(e==-1) {										// Load file and choose format before parsing									}else{										var type:String = filename.substring(e+1, filename.length).toUpperCase();										switch(type) {						case "WE3D":						case "XML":							loader = new WE3DLoader();							break;						case "LWO":							loader = new LWOLoader();							break;						case "OBJ":							loader = new OBJLoader();							break;						case "MD2":							loader = new MD2Loader();							break;						case "3DS":							loader = new _3DSLoader();							break;					}									}			}		}			}	}